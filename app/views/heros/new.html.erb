<% content_for :title, 'Ajouter un nouvel héro | MyLittleHero' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="form-general">
        <div class="col-xs-12">
          <h2 class="text-center">Qui est votre super héros ?</h2>
        </div>
        <%= simple_form_for [@hero] do |f| %>
          <%= f.simple_fields_for :relatives do |p| %>
          <div class="row">
            <h3><strong> Le créateur du héro:</strong></h3>
              <div class="col-xs-12 text-center">
                <%= p.input :family_link, label: 'je suis sa maman', collection: Relative::FAMILY_LINKS %>
                <%= p.input :mother_side, as: :boolean, checked_value: true, unchecked_value: false, label: 'Côté maternel' %>
                 <%= p.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
                 <%= p.input :role, as: :hidden, input_html: { value: 'admin' } %>
              </div>
            </div>
            <div class="row">
              <h3><strong> Création du héro:</strong></h3>
              <div class="col-xs-12 col-md-5">
                <%= f.input :firstname, label: 'Prénom du héro' %>
                <%= f.input :lastname, label: 'Nom du héro' %>
                <%= f.input :nickname, label: 'Surnom du héro' %>
                <%= f.input :gender, label: 'Fille ou Garçon', as: :radio_buttons, collection: %w(petite-fille petit-garçon) %>
                <%= f.input :date_of_birth, label: 'Date de naissance' %>
                <%= f.input :place_of_birth, label: 'Lieu de naissance' %>
              </div>
              <div class="col-xs-12 col-md-5 col-md-offset-2">
                <%= f.input :astro_sign, label: 'Signe Astrologique' %>
                <%= f.input :eyes_color, label: 'Couleur des yeux' %>
                <%= f.input :hair_color, label: 'Couleur des cheveux'%>
                <%= f.input :size, label: 'Taille du héro en cm' %>
                <%= f.input :weight, label: 'Poids du héro en kg' %>
                <%= f.input :favorite_toy, label: 'Jouet préféré' %>
              </div>
              <div class="col-xs-12 col-md-12">
                <%= f.input :photo, label_html: { class: "btn btn-primary" } %>
                <%= f.input :photo_cache, as: :hidden %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 text-center">
                <%= f.submit class: 'btn btn-success btn-form' %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
