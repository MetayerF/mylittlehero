<% content_for :title, "Vos héros| MyLittleHero" %>
<!-- FIRST CONTAINER -->
<div class="hero-index-title-container">
  <div class="hero-title">
    <h2 class= "text-center" >Tous vos Héros </h2>
    <p class= "text-center"> Une nouvelle arrivée dans votre famille?</p>
      <div class="text-center">
          <%= link_to "Un nouveau héros?", new_hero_path, class: "btn hero-index-button" %>
        </div>
  </div>
</div>
<!-- SECOND CONTAINER -->
<div class="hero-index-cards-container">
  <div class="row">
    <div class="hero-index-block">

      <% @heros.each do |hero|%>
      <div class="col-xs-12 col-md-4">
        <div class="hero-index-content text-center">
          <div class="hero-index-block">
            <div class="hero-index-photo">
              <% if hero.photo.blank? %>
                <%= image_tag("smiling_baby.png", height: 100) %>
                <% else %>
                <%= cl_image_tag hero.photo, class: 'avatar-index-badge' %>
              <% end %>
            </div>
            <h2><%= hero.firstname.capitalize %> <%= hero.lastname.capitalize %></h2>
            <p><%= hero.relatives.where(user_id: current_user.id).first.role %> </p>
            <%= link_to  hero_path(hero), class: "btn hero-show-button" do %>
                <i class="fa fa-eye"></i> <br> profil
            <% end %>
            <%= link_to new_hero_adventure_path(hero), class: "btn hero-show-button-two" do %>
                <i class="fa fa-plus"></i> <br> aventures
            <% end %>
          </div>
        </div>
      </div>
      <% end %>


    </div>
  </div>
</div>

