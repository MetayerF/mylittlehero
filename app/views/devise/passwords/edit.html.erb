<% content_for :meta_title, "Mise à jour de votre mot de passe - MyLittleHero" %>

<div class="wrapper background-form-up">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="form-login">
          <h2 class="text-center schoolbell">Modifier votre mot de passe</h2>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>

              <div class="form-inputs">
                <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true, hint: ("Minimun #{@minimum_password_length} caractères" if @minimum_password_length) %>
                <%= f.input :password_confirmation, label: "Confirmer nouveau mot de passe", required: true %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-success input-radius schoolbell"%>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
