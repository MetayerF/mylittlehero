<% content_for :title, 'Voici les proches de votre héro ' + @hero.firstname + ' ! | MyLittleHero.com' %>

<div class="container">
  <div class="header-relatives text-center">
    <h1>Ma Famille</h1>
    <p>Toutes les personnes ci-dessous représentent les proches de <%= @hero.firstname %></p>
  </div>
  <div class="relatives-banner">
    <div class="relatives-banner-content text-center">
      <div class="row">
        <div class="col-xs-12" id="parents">
          <h2>Mes parents</h2>
            <div class="relatives-avatar">
              <% @relatives.where(family_link: 'parent').each do |relative|%>
                <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                  <%= image_tag relative.user.photo %>
                <% end %>
              <% end %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-1" id="freres-soeurs">
          <h2>Mes frères et soeurs</h2>
            <div class="relatives-avatar">
              <% @relatives.where(family_link: "Soeur").each do |relative|%>
                <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                  <%= image_tag relative.user.photo %>
                <% end %>
              <% end %>
              <div class="plus-button-relatives">
                <%= link_to new_hero_relative_path do %>
                  <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <% end %>
              </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-md-offset-7" id="grand-parents">
          <h2>Mes grand-parents</h2>
          <div class="relatives-avatar">
            <% @relatives.where(family_link: "grand-parents").each do |relative|%>
              <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                <%= image_tag relative.user.photo %>
              <% end %>
            <% end %>
            <div class="plus-button-relatives">
              <%= link_to new_hero_relative_path do %>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-4 col-md-offset-1" id="oncles-tantes">
          <h2>Mes oncles et tantes</h2>
          <div class="relatives-avatar">
            <% @relatives.where(family_link: "oncle").each do |relative|%>
              <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                <%= image_tag relative.user.photo %>
              <% end %>
            <% end %>
            <div class="plus-button-relatives">
              <%= link_to new_hero_relative_path do %>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 col-md-offset-2" id="cousins-cousines">
          <h2>Mes cousins et cousines</h2>
          <div class="relatives-avatar">
            <% @relatives.where(family_link: "cousine").each do |relative|%>
              <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                <%= image_tag relative.user.photo %>
              <% end %>
            <% end %>
              <div class="plus-button-relatives">
                <%= link_to new_hero_relative_path do %>
                  <i class="fa fa-plus-circle" aria-hidden="true"></i>
                <% end %>
              </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-4 col-md-offset-4" id="amis">
          <h2>Les amis de ma famille</h2>
          <div class="relatives-avatar">
            <% @relatives.where(family_link: "amis").each do |relative|%>
              <%= link_to hero_relative_path(@hero, relative), class: "relatives-hover" do %>
                <%= image_tag relative.user.photo %>
              <% end %>
            <% end %>
            <div class="plus-button-relatives">
              <%= link_to new_hero_relative_path do %>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



