<div class="col-xs-12 col-sm-4 col-md-4">
  <div class="signup-form">
    <ul class="tab-group">
      <li class="tab active"><a href="#signup"><strong>Je n'ai pas de compte</strong></a></li>
      <li class="tab"><a href="#login"><strong>J'ai d√©ja un compte</strong></a></li>
    </ul>

    <div class="tab-content">
      <div id="signup">
        <h1>Inscrivez-vous gratuitement</h1>
        <%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
        <%= f.error_notification %>

        <div class="field-wrap">
          <label>
            Email<span class="req">*</span>
          </label>
          <%= f.input :email, required: true %>
        </div>

        <div class="field-wrap">
          <label>
            Mot de passe<span class="req">*</span>
          </label>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <button type="submit" class="button button-block"/>C'est parti !</button>
          <!--   <div class="button button-block">
          <%= f.button :submit, "C'est parti !" %>
        </div> -->
        <% end %>
      </div>
    </div>
  </div>
</div>
