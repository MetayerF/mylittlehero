<% content_for :title, "Ajouter une nouvelle aventure ðŸ‘¶ "%>


<div class="wrapper background-form-up">
  <div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="form-general">
        <h2 class="text-center">CrÃ©er une nouvelle aventure ðŸ‘¶ </h2>
        <%= simple_form_for [@hero, @adventure] do |f| %>
          <div class="row">
            <div class="col-xs-12 col-md-5">
              <%= f.input :title, input_html: { class: 'input-blue-background' } %>
              <%= f.input :description, input_html: { class: 'input-blue-background' } %>
              <%= f.input :location, input_html: { class: 'input-blue-background' } %>
            </div>
            <div class="col-xs-12 col-md-5 col-md-offset-2 ">
              <div class="form-group">
                <label class="control-label string required" for="adventure_title"><abbr title="required">*</abbr> Date</label>
                <div class='input-group date input-blue-background' id='date'>
                    <input type='text' name="adventure[date]" class="form-control" />
                    <span class="input-group-addon input-blue-background">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
              </div>
              <%= f.simple_fields_for :photos, input_html: { class: 'input-blue-background' } do |p| %>
                <%= p.input :picture, as: :file %>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">
              <%= f.submit class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
<div class="wrapper background-form-down"></div>
